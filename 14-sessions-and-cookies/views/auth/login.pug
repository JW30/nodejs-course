extends ../layouts/main

block head
    link(rel="stylesheet" href="/css/auth.css")

block content
    .container
        h2.main-heading Login
        form(action="/login" method="POST")
            .mb-3
                label.form-label(for="email") Email
                input.form-control(type="email" name="email" id="email" required)
            .mb-3
                label.form-label(for="password") Password
                input.form-control(type="password", name="password" id="password" required)
            .my-container
                button.btn.btn-dark.w-10rem.mb-3(type="submit") Login
                .text-secondary Don't have an account yet?
                a(href="/register") Create new account

